<div class="home-header">
    {{#if search}}
        <h1>You are searching for: <span>{{search}}</span></h1>
        {{#if thoughtsQty}}
            <p>Were found <span>{{thoughtsQty}} thoughts</span></p>
        {{else}}
            <p>No thoughts were found to <span>{{search}}</span></p>
        {{/if}}
    {{else}}  
        <h1>Get to Know some of our <span>Thoughts</span>:</h1>
        <h1>All Thoughts</h1>
    {{/if}}
    <form action="/" method="get">
        <input type="text" name="search" placeholder="Are you looking for?">
        <input type="submit" value="Search" class="btn">
    </form>
    <div class="order-container">
        <span>Ordenate by:</span>
        <form action="/" method="get">
            <input type="hidden" name="search" value="{{this.search}}">
            <input type="hidden" name="order" value="old">
            <button type="submit"><i class="bi bi-arrow-down"></i></button>
        </form>

         <form action="/" method="get">
            <input type="hidden" name="search" value="{{this.search}}">
            <input type="hidden" name="order" value="new">
            <button type="submit"><i class="bi bi-arrow-up"></i></button>
        </form>
        <a href="/"> Clean </a>
    </div>
</div>
<div class="thoughts-container">
    {{#each thoughts}}
        <figure>
            <blockquote>
                "{{this.title}}"
            </blockquote>
            <figcaption>By <span>{{this.User.name}}</span></figcaption>
        </figure>
    {{/each}}
</div>